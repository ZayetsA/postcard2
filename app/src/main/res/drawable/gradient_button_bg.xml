<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/green_dark" android:gradientRadius="180dp" android:startColor="@color/green_light" android:type="linear" />
            <corners android:radius="100dp" />
            <stroke android:width="3dp" android:color="@color/green" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/blue_dark" android:gradientRadius="180dp" android:startColor="@color/blue_light" android:type="linear" />
            <corners android:radius="100dp" />
            <stroke android:width="3dp" android:color="@color/blue" />
        </shape>
    </item>
</selector>